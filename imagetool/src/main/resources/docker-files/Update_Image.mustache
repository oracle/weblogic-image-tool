{{#isWdtEnabled}}
    {{> run-wdt }}
{{/isWdtEnabled}}

FROM {{baseImage}} as final_build
USER root

ENV OPATCH_NO_FUSER=true

{{#isWdtEnabled}}
ENV DOMAIN_HOME={{{domain_home}}} \
    WDT_HOME={{{wdt_home}}} \
    {{#modelOnly}}
        WDT_MODEL_HOME={{{wdt_model_home}}} \
    {{/modelOnly}}
    PATH=${PATH}:{{{domain_home}}}/bin
{{/isWdtEnabled}}

LABEL com.oracle.weblogic.imagetool.buildid="{{buildId}}"

USER {{userid}}

{{> fmw-patching}}

{{#isWdtEnabled}}
    {{> final-wdt-copy}}
{{/isWdtEnabled}}

{{#finalBuildCommands}}
    {{{.}}}
{{/finalBuildCommands}}

